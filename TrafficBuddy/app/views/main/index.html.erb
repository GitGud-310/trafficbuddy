<%= javascript_include_tag 'geocoder' %>
<%= javascript_include_tag 'map_layer' %>
<script>
  function initialize() {
      var defaultLocation = geoCoding("Vancouver, BC");
      var myStartloc = defaultLocation;
      var mapOptions = {
          zoom: 10,
          center: defaultLocation
      }
      map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
  }

  google.maps.event.addDomListener(window, 'load', initialize());
  google.maps.event.addDomListener(window,'load', mapLayer());

</script>

<div id="map-canvas"></div>